{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Azure CLI Debug (Integrated Console)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
               "--help"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "justMyCode": false
        },
        {
            "name": "Azure CLI Debug (External Console)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "externalTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        },
        {
            "name": "Azdev Scripts",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            //"program": "${workspaceRoot}/tools/automation/__main__.py",
             "program": "${workspaceRoot}/env/Lib/site-packages/azdev/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "test", "test_nw_connection_monitor_v2_endpoint3"
                //"--help"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}
