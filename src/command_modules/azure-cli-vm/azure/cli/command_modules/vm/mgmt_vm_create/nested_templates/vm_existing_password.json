{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "dnsNameForPublicIP": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "osPublisher": {
      "type": "string"
    },
    "osOffer": {
      "type": "string"
    },
    "osSKU": {
      "type": "string"
    },
    "osVersion": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "storageContainerName": {
      "type": "string"
    },
    "osDiskName": {
      "type": "string"
    },
    "storageType": {
      "type": "string"
    },
    "sshKeyValue": {
      "type": "string",
      "defaultValue": ""
    },
    "sshKeyPath": {
      "type": "string",
      "defaultValue": ""
    },
    "availabilitySetId": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "osDiskUri": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "storageCaching": {
      "type": "string"
    },
    "customOsDiskType": {
      "type": "string"
    },
    "customOsDiskUri": {
      "type": "string"
    },
    "osDiskType": {
      "type": "string"
    }
  },
  "variables": {
    "imagePublisher": "[parameters('osPublisher')]",
    "imageOffer": "[parameters('osOffer')]",
    "imageSku": "[parameters('osSKU')]",
    "imageVersion": "[parameters('osVersion')]",
    "OSDiskName": "[parameters('osDiskName')]",
    "vmName": "[parameters('virtualMachineName')]",
    "vmSize": "[parameters('size')]",
    "vhdStorageName": "[parameters('storageAccountName')]",
    "vhdStorageType": "[parameters('storageType')]",
    "vhdStorageContainerName": "[parameters('storageContainerName')]",
    "nicName": "[parameters('nicName')]",
    "storageProfilesCustomImage": {
      "custom": {
        "osDisk": {
          "name": "[parameters('osDiskName')]",
          "caching": "[parameters('storageCaching')]",
          "createOption": "FromImage",
          "osType": "[parameters('customOsDiskType')]",
          "image": {
            "uri": "[parameters('customOsDiskUri')]"
          },
          "vhd": {
            "uri": "[parameters('osDiskUri')]"
          }
        }
      },
      "provided": {
        "osDisk": {
          "name": "[parameters('osDiskName')]",
          "caching": "[parameters('storageCaching')]",
          "createOption": "FromImage",
          "vhd": {
            "uri": "[parameters('osDiskUri')]"
          }
        },
        "imageReference": {
          "publisher": "[parameters('osPublisher')]",
          "offer": "[parameters('osOffer')]",
          "sku": "[parameters('osSKU')]",
          "version": "[parameters('osVersion')]"
        }
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "VirtualMachine"
      },
      "dependsOn": [ ],
      "properties": {
        "availabilitySet": {
          "id": "[parameters('availabilitySetId')]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('vmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": "[variables('storageProfilesCustomImage')[parameters('osDiskType')]]",
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      },
      "resources": [

      ]
    }
  ],
  "outputs": {
    "vm": {
      "value": "[reference(variables('vmName'))]",
      "type": "object"
    }
  }
  }
