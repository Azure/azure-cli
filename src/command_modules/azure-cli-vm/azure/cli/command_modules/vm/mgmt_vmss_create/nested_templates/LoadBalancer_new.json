{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "loadBalancerName": {
      "type": "string"
    },
    "resourceLocation": {
      "type": "string"
    },
    "apiVersion": {
      "type": "string"
    },
    "ipDeploymentName": {
      "type": "string"
    },
    "publicIPAddressID": {
      "type": "string"
    },
    "bePoolName": {
      "type": "string"
    },
    "natPoolName": {
      "type": "string"
    },
    "frontEndIPConfigID": {
      "type": "string"
    },
    "natStartPort": {
      "type": "int"
    },
    "natEndPort": {
      "type": "int"
    },
    "natBackendPort": {
      "type": "int"
    },
    "publicIpAddressType": {
      "type": "string"
    }
  },
  "variables": {
    "frontendConfig": {
      "new": [
        {
          "name": "LoadBalancerFrontEnd",
          "properties": {
            "publicIPAddress": {
              "id": "[parameters('publicIPAddressID')]"
            }
          }
        }
      ],
      "existing": [
        {
          "name": "LoadBalancerFrontEnd",
          "properties": {
            "publicIPAddress": {
              "id": "[parameters('publicIPAddressID')]"
            }
          }
        }
      ],
      "none": [
        {
          "name": "LoadBalancerFrontEnd"
        }
      ]
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[parameters('loadBalancerName')]",
      "location": "[parameters('resourceLocation')]",
      "apiVersion": "[parameters('apiVersion')]",
      "dependsOn": [ ],
      "properties": {
        "frontendIPConfigurations": "[variables('frontendConfig')[parameters('publicIpAddressType')]]",
        "backendAddressPools": [
          {
            "name": "[parameters('bePoolName')]"
          }
        ],
        "inboundNatPools": [
          {
            "name": "[parameters('natPoolName')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('frontEndIPConfigID')]"
              },
              "protocol": "tcp",
              "frontendPortRangeStart": "[parameters('natStartPort')]",
              "frontendPortRangeEnd": "[parameters('natEndPort')]",
              "backendPort": "[parameters('natBackendPort')]"
            }
          }
        ]
      }
    }
  ]
}