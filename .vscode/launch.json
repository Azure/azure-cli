{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Azure CLI Debug (Integrated Console)",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Azure CLI Debug (External Console)",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "externalTerminal"
        },
        {
            "name": "Azure CLI Debug interactive",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "interactive"
            ],
            "console": "externalTerminal"
        },
        {
            "name": "Azdev Scripts",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/tools/automation/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python test debug",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "purpose": ["debug-test"],
            "cwd": "${workspaceRoot}",
            "console": "externalTerminal",
            "justMyCode": false
        }
    ]
}
