{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scriptName": {
           "type": "string",
           "metadata": {
                "description": "Deployment script name"
            }
        },
        "apiVersion": {
            "type": "string",
            "defaultValue": "2019-10-01-preview",
            "allowedValues": [
                "2019-10-01-preview",
                "2020-10-01"
            ]
        },
        "utcValue": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }
    },
    "variables": {
        "identity": {
            "type": "UserAssigned",
            "userAssignedIdentities": {
                "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/python_sdk_test/providers/Microsoft.ManagedIdentity/userAssignedIdentities/python_test_sdk_msi')]": {}
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "[parameters('apiVersion')]",
            "name": "[parameters('scriptName')]",
            "location": "[resourceGroup().location]",
            "identity": "[if(equals(parameters('apiVersion'), '2020-10-01'), json('null'), variables('identity'))]",
            "kind": "AzureCLI",
            "properties": {
                "forceUpdateTag": "[parameters('utcValue')]",
                "containerSettings": {
                    "containerGroupName": "mycustomaci"	
                },
                "AzCliVersion": "2.0.80",
                "timeout": "PT30M",
                "arguments": "'foo' 'bar'",
                "scriptContent": "echo 'foo'",
                "cleanupPreference": "OnExpiration",
                "retentionInterval": "PT25H"
            }
        }
    ],
    "outputs": {}
}