{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Azure CLI Debug (Integrated Console)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "justMyCode": false
        },
        {
            "name": "Azure CLI Debug (External Console)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/src/azure-cli/azure/cli/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "cdn",
                "endpoint",
                "rule",
                "add",
                "-g",
                "clitest.rglh33dku4rvt4xcsbmu4llambeol3mpvv2p4aap6f4xukawusizg62hkqmihiihjlr",
                "-n",
                "endpointn43hum4ryleaf24k",
                "--profile-name",
                "akpzbc24hujqvkr7wtm6l443",
                "--order",
                "1",
                "--action-name",
                "CacheExpiration",
                "--match-variable",
                "UrlPath",
                "--operator",
                "Wildcard",
                "--match-values",
                "/test2/*",
                "--cache-behavior",
                "Override",
                "--cache-duration",
                "00:05:00",
                "--debug"
            ],
            "console": "externalTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        },
        {
            "name": "Azdev Scripts",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/tools/automation/__main__.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}
